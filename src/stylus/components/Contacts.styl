.contacts-container {
  overflow: auto;
  height: calc(100% - 90px);

  .search-container {
	height: 60px;
	background: #F2F1EA;

	.search-bar {
	  width: 240px;
	}

	.glyphicon-plus {
	  display: inline-block;
	  width: 30px;
	  height: 30px;
	  font-size: 1em;
	  border-radius: 20px;
	  line-height: 2em;
	  padding-left: .1em;
	  text-align: center;
	  background: #9CCD21;
	  color: #FFF;
	  cursor: pointer;
	}
  }

  .contacts {
	overflow-y: auto;
	position: absolute;
	top: 90px;
	bottom: 0;
	width:300px;
  }

  .add-more {
	padding: 10px 15px 10px 20px;
	cursor: pointer;

	.glyphicon {
	  margin-right: 5px;
	  display: inline-block;
	  vertical-align middle;
	  background-size: cover;
	  position: relative;
	  text-align: center;
	  border-radius: 50px;
	  background-color: #9ccd21;
	  color: #fff;
	  height: 2.2em;
	  width: 2.2em;
	  font-size: 1.5em;
	  line-height: 2.2em;
	}

	.inner-message {
	  display: inline-block;
	  vertical-align middle;
	  margin-top: 2px;
	  margin-left: 5px;
	  width: 190px;
	  color: #8ecd22;
	}
  }

  .contact {
	position: relative;
	padding: 10px 15px 10px 20px;
	cursor: pointer;
	border-bottom: 1px solid #EEE;

	&.selected, &:hover {
	  background: #F5FAE8;
	}

	.glyphicon-info-sign, .glyphicon-remove {
	  display: none;
	}

	&:hover {
	  .glyphicon-info-sign {
		display: inline;
		background: #FFF;
		color: #888;
		border-radius: 20px;
		padding: 5px;
		position: absolute;
		top: 20px;
		right: 10px;

		&:hover {
		  color: #9CCD21;
		}
	  }
	}

	.summary {
	  display: inline-block;
	  margin-top: 2px;
	  margin-left: 5px;
	  width: 190px;

	  .name {
		color: #9CCD21;
		width: 190px;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		text-transform: capitalize;
	  }

	  .title {
		font-size: 12px;
		width: 190px;
		height: 15px;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		text-transform: capitalize;
	  }

	  .network {
		font-size: 12px;
		width: 190px;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		text-transform: capitalize;
	  }
	}

	&.is-patient {
	  .summary {
		.name {
		  color: #FF5439;
		}
	  }

	  .Avatar {
		background: #FF5439;
	  }
	}
  }
}

.contact-modal {
  .modal {
	max-height: 400px;

	.error-message {
	  color: #C8584B;
	  margin: 10px;
	  width: 100%;
	  text-align: center;
	}

	.add-contact-form {
	  select {
		width: 440px;
	  }

	  .select2-container {
		border: 1px solid #ccc;
		border-radius: 2px;
		background-color: #fafafa;
		margin-left: auto;
		margin-right: auto;
		display: block;
		padding: 5px;
		height: 40px;

		.select2-selection--single {
		  .select2-selection__rendered {
			padding-left: 0;
		  }
		}
	  }

	  .select2-container--default {
		.select2-selection--single {
		  background-color: transparent;
		  border: none;
		  border-radius: 0;

		  .select2-selection__arrow {
			top: 5px;
		  }
		}
	  }
	}
  }
}
