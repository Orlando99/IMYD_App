.login-container {
  .login-field {
    border-bottom: 1px solid #CCC;
    margin: 20px;
    position: relative;

    input {
      border: none;
      font-size: 25px;
      margin-bottom: 2px;
      width: 225px;
      color: #AAA;

      @media (min-width: 200px) {
        width: 100px;
      }

      @media (min-width: 360px) {
        width: 175px;
      }

      @media (min-width: 500px) {
        width: 225px;
      }


      &:focus {
        outline: 0;
      }

      &::-webkit-input-placeholder,
      &:-moz-placeholder,
      &::-moz-placeholder,
      &:-ms-input-placeholder{
        color: #AAA;
      }
    }

    .icon {
      height: 36px;
    }

    .user-icon {
      width: 36px;
      background: url('../images/username_icon.png');
      background-size: cover;
      margin-right: 5px;
      float: left;
    }

    .password-icon {
      width: 30px;
      background: url('../images/password_icon.png');
      background-size: cover;
      margin-right: 11px;
      float: left;
    }


    .validation-error {
      top: 100%;
      margin-top: 5px;
      left: 30px;

      &:before, &:after {
        margin-bottom:-1px
      }

      &:before {
        border-width: 15px;
        margin-left: -15px;
      }

      &:after {
        border-width: 14px;
        margin-left: -14px;
      }
    }
  }

  .submit {
    background: #9CCD21;
    border: none;
    margin: 0 0 10px 0;
    width: 100%;
    height: 50px;
    color: #FFF;
    font-size: 25px;
    cursor: pointer;

    &:focus {
      outline: 0;
    }
  }

  .password-help-container {
    text-align: center;

    a {
      display: block;
      color: #AAA;
      text-decoration: none;
      padding: 2px;
      font-size: 16px;

      &:visited {
        color: #AAA;
      }
    }
  }

  .sign-up-container {
    text-align: center;

    a {
      display: block;
      color: #777;
      padding: 10px;
      font-size: 20px;

      &:visited {
        color: #777;
      }
    }
  }

  .error {
    color: #F00;
    text-align: center;
    margin: 5px;
  }
}
