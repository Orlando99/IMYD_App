.settings {
  height: calc(100% - 66px);
  margin-top: -20px;

  .navigation {
    display: inline-block;
    height: 100%;
    width: 200px;
    border-right: 1px solid #DDD;
    background-color: #FFF;

    .section {
      color: #9ccd21;
      font-size: 18px;

      > span {
        display: inline-block;
        padding-left: 15px;
        height: 40px;
        line-height: 40px;
      }

      &:nth-child(n+1) {
        border-top: 1px solid #DDD;
      }

      .item {
        color: #000;
        font-size: 14px;
        cursor: pointer;
        padding: 0 5px 5px 15px;
        height: 30px;
        line-height: 30px;

        &.selected {
          background-color: #f5fae8;
          border-top: 1px solid #DDD;
          box-shadow: 0 1px 1px #DDD;
        }
      }
    }
  }
  .container {
    display: inline-block;
    height: 100%;
    width: calc(100% - 200px);
    vertical-align: top;
    padding: 15px;
  }

  .security-info {
    height: calc(100% - 50px);
    overflow-y: auto;

    .invalid {
      border: 1px solid red !important;
    }
  }
}

#settings {
  .modal-container {
    .modal {
      width: 800px;
      height: 550px;

      .error-message {
        color: #C8584B;
        margin: 10px;
      }

      label {
        display: block;
        font-weight: bold;
        font-size: 14px;
        margin-left: 10px;
        margin-top: 10px;
        color: #888;
      }

      input {
        display: block;
        border: 1px solid #ccc;
        border-radius: 2px;
        background-color: #fafafa;
        margin: 5px 10px 0 10px;
        padding: 5px;
        height: 40px;
        width: 200px;

        &:focus {
          background-color: #FFF;
        }
      }

      .security-question, .security-answer {
        width: 500px;
      }

      .select2-container {
        border: 1px solid #ccc;
        border-radius: 2px;
        background-color: #fafafa;
        margin: 0 10px 0 10px;
        padding: 5px;
        height: 40px;

        .select2-selection--single {
          .select2-selection__rendered {
            padding-left: 0;
          }
        }
      }

      .select2-container--default {
        .select2-selection--single {
          background-color: transparent;
          border: none;
          border-radius: 0;

          .select2-selection__arrow {
            top: 5px;
          }
        }
      }
    }
  }
}
