.message-bar-wrapper{
	position: fixed;
	bottom: 0;
	width: calc(100% - 300px);
	max-height: 70%;
	background: #F2F1EA;

	button {
		vertical-align: top;
		border: none;
		margin-top: 10px;
		margin-left: 15px;

		&:focus, &:active {
			outline: 0;
		}
	}

	.message-bar {
		&.drag-enter {
			border: 1px solid #C8584B;
		}

		.glyphicon-paperclip {
			display: inline-block;
			width: 75px;
			font-size: 30px;
			color: #CCC;
			padding: 15px 20px 15px 30px;
			cursor: pointer;

			&.has-attachment {
				color: #C8584B;
			}

			input {
				display:none;
			}
		}

		> input, textarea {
			height: 40px;
			width: calc(100% - 200px);
			max-width: 1000px;
			border: 1px solid #CCC;
			vertical-align: top;
			margin-top: 10px;
			padding-left: 10px;

			&:focus, &:active {
				outline: 0;
			}
		}

		> textarea {
			resize: none;
			padding: 10px;
			min-height: 42px;
			max-height: 115px;
			overflow-y: auto;
			overflow-x: hidden;
			margin: 10px 0;
		}

		.action-button {
			height: 40px;
			width: 40px;
			border-radius: 40px;
			background: #9ccd21;
			color: #FFF;
		}
	}

	.export-button {
		background-color: white;
		color: #333;
		padding: 10px 20px;

		&:before {
			margin-right: 10px;
		}
	}

	.cancel-button {
		background-color: transparent;
		padding: 10px;
	}
}
