.external-accept-container {
  button {
	float:left;
	background: #9CCD21;
	border: none;
	margin: 10px 20px 10px 20px;
	width: 100%;
    height: 30px;
	color: #FFF;
    font-size: 15px;
	cursor: pointer;

    @media (min-width: 360px) {
      height: 40px;
      font-size: 20px;
    }

    @media (min-width: 500px) {
      height: 50px;
      font-size: 25px;
    }

	&:focus {
	  outline: 0;
	}
  }

  .title{
    font-size: 14px;
    text-align center;
  }

  .external-accept-or {
    color: #c6c4c4;
    font-weight: bold;
    font-size: 20px;
    display: block;
    margin-top: -35px;
    margin-right: auto;
    margin-left: auto;
    width: 50px;
    background-color: white;
    text-align: center;
  }

  .separator {
    margin-top: 50px;
    margin-bottom: 30px;

    & > div {
      margin-top: 20px;
      margin-bottom: 20px;
      border: 0;
      border-top: 2px solid #eee;
    }
  }

  .error {
    text-align center;
    color: red;
  }

}

