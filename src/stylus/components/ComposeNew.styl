.compose-modal {
  &.modal-container {

    .add-contact-form {
      height:220px;
    }
    .add-contact-external {
      height:80px;

      .external-accept-or {
        color: #c6c4c4;
        font-weight: bold;
        font-size: 20px;
        display: block;
        margin-top: -35px;
        margin-right: auto;
        margin-left: auto;
        width: 50px;
        background-color: white;
        text-align: center;
      }

      .separator {
        margin-top: 50px;
        margin-bottom: 30px;

        & > div {
          margin-top: 20px;
          margin-bottom: 20px;
          border: 0;
          border-top: 2px solid #eee;
        }
      }

      .external-link {
        font-size: 15px;
        text-align center;
      }
    }

    .modal {
      input.name {
        width: 455px;
        font-size: 16px;
        line-height: 16px;
        padding: 10px;
        margin: 0 20px 20px 20px;
        border: 1px solid #AAA;
        border-radius: 5px;

        &[disabled] {
          color: #AAA;
        }
      }

      button {
        top: 58%;
      }

      .autocomplete-tags {
        width: 455px;
        font-size: 16px;
        line-height: 16px;
        padding: 10px;
      }

      .select2-container {
        margin: 0 20px 20px 20px;
      }

      .contacts-container {
        .contacts {
          position: relative;
          width: 100%;
          top: 0;
          margin-top: 20px;
          height: calc(100% - 50px);

          .contact {
            width: 300px;
            margin-left: auto;
            margin-right: auto;
            border: 1px dashed #EEE;

            .summary {
              .is-admin {
                width: 50px;
                float: right;
                margin-right: -60px;
                color:#9ccd21;
              }
            }
          }
        }

        .contact-form {
          margin-top: 20px;
        }
      }

      .room-name {
        text-align: center;

        .name {
          color: #9ccd21;
        }
      }
    }
  }
}

@media (min-height: 300px) {

  .compose-modal {
    font-size: 10px;
    line-height: 11px;

    &.modal-container {
      .modal {
        .contacts-container {
          .contact-form {
            margin-top:10px;
            height: calc(100% - 35px);

            .contact-name {
              font-size: 11px;
            }
          }

          .contacts {
            .contact {
              .summary {
                .is-admin {
                  margin-right: -60px;
                }
                .network, .title, .name {
                  font-size: 9px;
                }
              }
              padding: 4px 9px 4px 14px;
            }
          }

        }
      }
    }
  }
}

