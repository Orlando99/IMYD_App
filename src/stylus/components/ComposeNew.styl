.select2-container--default {
  &.select2-container--focus {
    .select2-selection--multiple {
      border-color: #9CCD21;
    }
  }

  .contact {
    span {
      line-height: 2em;
    }
  }

  .select2-search--inline {
    .select2-search__field {
      line-height: 2em;
    }
  }

  .select2-selection--multiple {
    .select2-selection__choice__remove {
      display: none;
      float: right;
    }

    .select2-selection__choice {
      background-color: transparent;
      border: none;
      padding: 0 5px 0 0;
      position: relative;

      .select2-selection__choice__remove {
        position: absolute;
        display: none;
        z-index: 10;
        top: 5px;
        right: -6px;
        font-size: 14px;
        color: #ff2434;
        &:hover {
          color: #ff6922;
        }
      }

      &:hover {
        .select2-selection__choice__remove {
          display: block;
        }
      }
    }
  }

  .select2-results__option {
    .glyphicon-info-sign {
      display: none;
    }
    .glyphicon-remove{
      display: none;
      float: right;
      color: #ff2434;
      &:hover {
        color: #ff6922;
      }
    }

    &:hover {
      .glyphicon-info-sign {
        display: inline;
        background: #FFF;
        color: #888;
        border-radius: 20px;
        padding: 5px;
        margin-left: 10px;

        &:hover {
          color: #9CCD21;
        }
      }
    }
  }

  .select2-results__option[aria-selected=true] {
    background-color: #8bbc10;
    color: #d3d3d3;

    &:hover {
      .glyphicon-remove {
        display: inline;
      }
    }
    .Avatar {
      border: 1px solid #d3d3d3;
    }
  }

  .select2-results__option--highlighted[aria-selected] {
    background-color: #9CCD21;
    color: #FFF;

    .Avatar {
      border: 1px solid #FFF;
    }
  }
}
