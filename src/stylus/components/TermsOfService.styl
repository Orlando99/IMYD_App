#settings {
	.modal-container {
		.modal {
			.security-info {
				input[type=checkbox] {
					display: inline-block;
					vertical-align middle;
					height: auto;
					width: auto;
					padding: 0;
					margin-top: 20px;
					margin-bottom: 20px;
				}
				label {
					display: inline-block;
					font-weight:normal;
					color:inherit;
					margin-left:5px;
				}

				.tos {
					height: 150px;
					overflow-x: hidden;
					white-space: pre-wrap;
					overflow-y: scroll;
					border: 1px solid #CCC;
				}

				&.patient {
					.tos {
						height: 335px;
					}
				}
			}
		}
	}
}
